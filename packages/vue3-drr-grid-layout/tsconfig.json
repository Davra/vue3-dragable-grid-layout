{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "types": ["vitest/globals"],
  },
  "include": [
    "src/helpers/*.ts",
    "src/types/*.ts",
    "src/*.d.ts",
    "src/components/*.vue"
  ],
  "exclude": [
    "./node_modules/*",
    "./node_modules/**",
    "./dist"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
